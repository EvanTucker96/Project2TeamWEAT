@model TravelExpertsClientPage.Models.Supplier

@{
    ViewBag.Title = "Edit a Supplier";
}
<!--
Supplier edit page
    Author: Autogenerated + TH
-->
<h2>Edit a Supplier</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Supplier</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SupplierId)

    <div class="form-group">
        @Html.LabelFor(model => model.SupName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SupName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SupName, "", new { @class = "text-danger" })
        </div>
    </div>
    <h5>Supplier's Products</h5>
    <div class="form-group">
        @foreach (var prod in ViewBag.Products)
        {
        <div>
            @if (ViewBag.Offerings.Contains(prod))
            {
                <input id="@prod.ProdName" name="@prod.ProdName" type="checkbox" value="@prod.ProductId" checked="checked"/>
            }
            else
            {
                <input id="@prod.ProdName" name="@prod.ProdName" type="checkbox" value="@prod.ProductId" />
            }

            <label for="@prod.ProdName">@prod.ProdName</label>
        </div>
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "SupplierIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
