@model TravelExpertsClientPage.Models.Package

@{
    ViewBag.Title = "Add a Package";
}
<!--
Package creation page
    Author: Autogenerated + TH
-->
<h2>Add a Package</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.PkgName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgStartDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgStartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgEndDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgEndDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgDesc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgDesc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgBasePrice, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgBasePrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgBasePrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgAgencyCommission, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgAgencyCommission, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgAgencyCommission, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PkgImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PkgImageFile, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PkgImageFile, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <h5>Products in this Package</h5>
    <div>Selecting a supplier for a product will include that product in the package.</div>
    <div class="form-group">
        @foreach (TravelExpertsClientPage.Models.Product prod in ViewBag.Products)
        {
            <div>
                <label for="@prod.ProdName">@prod.ProdName</label>
                <select class="form-control" id="@prod.ProdName" name="@prod.ProdName">
                    <option value="-1">Select Supplier</option>
                    @foreach(TravelExpertsClientPage.Models.Supplier sup in ((Dictionary<string,List<TravelExpertsClientPage.Models.Supplier>>)ViewBag.ProdSupp)[prod.ProdName])
                    {
                        <option value="@sup.SupplierId">@sup.SupName</option>
                    }
                </select>
            </div>
        }
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary float-left" />&nbsp;
            @Html.ActionLink("Back to List", "PackageIndex", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
